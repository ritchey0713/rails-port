<%= form_with(model: @portfolio_item, local: true) do |form| %>
<div class="row">
  <div class='col-md-6'>
    <%= render 'portfolios/partials/form_errors.html.erb'%>

    <div class="form-group field">
      <%= form.label :title %>
      <%= form.text_field :title, id: :portfolio_title, class: "form-control"%>
    </div>

    <div class="field form-group">
      <%= form.label :subtitle %>
      <%= form.text_field :subtitle, id: :portfolio_subtitle, class: "form-control" %>
    </div>
  

   <div class="field form-group">
      <label class="btn btn-primary">
        Upload a main image file <%= form.file_field :main_image, style: "display:none;", value: @portfolio_item.main_image%>      
      </label>
      
    </div>

     <div class="field form-group">
      <label class="btn btn-primary">
        Upload a thumb image <%= form.file_field :thumb_image, style: "display:none;", value: @portfolio_item.main_image%>
      </label>
      
    </div>
  </div>

  <div class="col-md-6">
    <div class="field form-group">
      <%= form.label :body %>
      <%= form.text_area :body, id: :portfolio_body, class: "form-control", rows: 8 %>
    </div>
  </div>

</div>
 
  <hr />

  <div class="col-md-12">
    <h3>Technologies used</h3>
    <div>
      <%= form.fields_for :technologies do |technology_form| %>
        <%= render 'portfolios/partials/technology_fields', f: technology_form %> <!-- partial -->
      <% end %>

      <div>
        <%= link_to_add_association "Add Technology", form, :technologies, partial: "portfolios/partials/technology_fields" %> <!-- using cocoon to have js add new fields -->
      </div>
    </div>

    <div class="form-group">
      <%= form.submit "Save portfolio item", class: "btn btn-primary btn-block" %>
    </div>
<% end %>
</div>
  