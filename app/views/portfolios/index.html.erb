<h1>Portfolio Items</h1>

<%= link_to "Create a new Item", new_portfolio_path %>

<% @portfolio_items.each do |item|%>
  <p><%= link_to item.title, portfolio_path(item) %></p>
  
  <p><%= item.subtitle %></p>
  
  <p><%= item.body %></p>
  
  <p><%= image_tag item.thumb_image unless item.thumb_image.nil? %></p>
  <%= link_to "Edit portfolio item", edit_portfolio_path(item) %>
  <%= link_to "Delete Item", portfolio_path(item), method: :delete, data: { confirm: 'Are you sure? '}%>
  
<% end %>