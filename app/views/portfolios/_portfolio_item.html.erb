<div class="col-md-4" data-id="<%= portfolio_item.id %>">
  <div class="card mb-4 shadow-sm">
    <p><%= image_tag(portfolio_img(portfolio_item.thumb_image, "thumb"), class: "card-img-top",width:"100%") %></p>
    <div class="card-body">
      <p class="card-text">
        <span>
          <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %>
        </span>
        <p>
          <%= portfolio_item.subtitle %>
          <%= portfolio_item.url %>
          <%= portfolio_item.github_url %>
        </p>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%# <button type="button" class="btn btn-sm btn-outline-secondary" >View</button>
          <button type="button" class="btn btn-sm btn-outline-secondary">Github</button> %>
          <%= link_to "View", portfolio_item.url, target: "_blank", class: "btn btn-sm btn-outline-secondary"%>
        </div>
        <small class="text-muted"><%= portfolio_item.created_at %></small>
      </div>
    </div>
  </div>
</div>