<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
        <p id="notice"><%= notice %></p>

        <%= image_tag @portfolio_item.main_image, width: "100%" %>    
    </div>

    <div class="col-md-5">    
      <p>
        <strong>Title:</strong>
        <%= @portfolio_item.title %>
      </p>

      <p>
        <em>Subtitle:</em>
        <%= @portfolio_item.subtitle %>
      </p>

      <p>
        <strong>Body:</strong>
        <%= @portfolio_item.body %>
      </p>

      <h3>Technologies Used</h3>

      <% @portfolio_item.technologies.each do |technology|%>
        <p> <%= technology.name %></p>
      <% end %>

      
    </div>
  
  </div>
</div>