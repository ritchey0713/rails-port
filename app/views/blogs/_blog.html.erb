<div class="blog-post">
  <h2 class="blog-post-title">
    <%= blog.title.upcase %>
  </h2>
  <p>published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago
  </p>

    <p>
      <%= blog.body %>
    </p>

    <%= link_to blog.status, toggle_status_blog_path(blog) %> 
    <%= link_to 'Show', blog %>
    <%= link_to 'Edit', edit_blog_path(blog) if logged_in?(:site_admin) %>
    <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
  
</div>